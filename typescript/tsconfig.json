{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "checkJs": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "pretty": true,
    "baseUrl": ".",
    "outDir": "compiled",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "node"
  ]
}